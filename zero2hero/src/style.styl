fil(times) {
    filter: brightness(times);
    -webkit-filter: brightness(times);
}

body
    margin: 0px;
    background-color: black;
     
    
 
 .bg-img
     width:100%;
     position: fixed;
     top: -20px;
     z-index: -1;
     
 
 .container
    max-width: 1200px;
    margin: 48px auto;

   .language
     text-align:center
     color: white;
     font-size: 42px;
     font-family: Microsoft JhengHei;

     & > p
       margin-bottom: 0px;

     & > li
       display: inline-block;
       font-size: 28px;

     & > li:hover
       cursor: pointer;
       transform:scale(1.2);
       transition: 0.5s;
       

   a
     text-decoration:none;   
      
    .frame
        display: inline-block;
        width: 300px;
        background-color: rgba(0, 0, 0, .5);
        margin-left: 70px;
        margin-top: 70px;
        
      
        
          
        &:hover
            cursor: pointer;
            box-shadow: 16px 20px 8px rgba(0, 0, 0, .5);
            transition: 1s;
          
            
 

          &:hover .preview
              fil(1.5);
              transition: 1s;
          
            
            .preview 
                width: 300px;
                height: 168.75px;
                position: relative;

                & > img
                    position: relative;
                    width: 100%;
                    height: 100%;
                    z-index: 10;
                    
                

                & > .placeholder
                    position: absolute;
                    top: 0px;
                    left: 0px;
                    width: 100%
                    height: 100%;
                    background-image: url("404_preview-320x180.jpg");

 
            
            .status
                display:flex;
            
                .logo
                    margin-left: 10px;
                    margin-top: 10px;
                    display: inline-block;
                    width: 60px;
                    height: 60px;
                    border-radius:50%;
                    vertical-align: -45%;
                    position: relative;

                    & > img 
                        position: relative;
                        width: 100%;
                        height: 100%;
                        z-index: 10;
                        border-radius:50%;
                        vertical-align: -45%;
                        z-index: 10;

                     & > .placeholder
                        position: absolute;
                        top: 0px;
                        left: 0px;
                        width: 100%
                        height: 100%;
                        border-radius:50%;
                        vertical-align: -45%;
                        background-image: url("404_logo-300x300.png");
                        

                .content
                    color: white;
                    display: inline-block; 
                    width: 200px;
                    font-size: 15px;
                    
                

                    & > ul
                        width: 200px;
                        padding-left: 20px;
                        overflow : hidden;
                        white-space : nowrap;
                        text-overflow : ellipsis;
                        
                        
                        
 
